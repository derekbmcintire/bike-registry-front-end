{{#each bicycles as |bicycle|}}

<div class="bicycles row" data-id="{{bicycle.id}}">
  <div class="show-left col-xs-4">
    <img class="bike-img" src={{bicycle.url}}>
  </div>
  <div class="show-right col-xs-5">
      <p><span class="attribute">Make:</span> {{bicycle.make}}</p>
      <p><span class="attribute">Model:</span> {{bicycle.model}}</p>
      <p><span class="attribute">Color:</span> {{bicycle.color}}</p>
      <p><span class="attribute">Serial Number:</span> {{bicycle.serial_number}}</p>
      <p><span class="attribute">Size:</span> {{bicycle.size}}</p>
  </div>

{{#if bicycle.editable}}
  <div class="col-xs-3">
    <button class="show-update-form">Update</button>
    <button class="remove">Remove</button>
    <button class="register-stolen">Register Stolen</button>
  </div>
{{/if}}

</div>

{{/each}}
