{{#each bicycles as |bicycle|}}

<div class="bicycles" data-id="{{bicycle.id}}">
  <div class="row">
  <div class="show-left col-xs-3">
    <div class="bike-img-wrap">
    <img class="bike-img" src={{bicycle.url}}>
    </div>
    {{#if bicycle.stolen}}
      <h4 class='stolen-label'>STOLEN</h4>
    {{/if}}
  </div>
  <div class="show-center col-xs-4">
    <p class="text-left">{{bicycle.make}}</p>
    <p class="text-left">{{bicycle.model}}</p>
    <p class="text-left">{{bicycle.color}}</p>
  </div>
  <div class="show-right col-xs-4">
      <p class="text-left">{{bicycle.serial_number}}</p>
      <p class="text-left">{{bicycle.size}}</p>
  </div>
</div>

<div class="row bike-btns">
  <div class="col-xs-12 text-center">
    {{#if bicycle.editable}}
      <button class="bike-btn bike-nav show-update-form">Update</button>
      <button class="bike-btn bike-nav remove">Remove</button>
        {{#if bicycle.stolen}}
          <button class="bike-btn bike-nav recover">Bike was recovered</button>
        {{else}}
          <button class="bike-btn bike-nav register-stolen">Bike was stolen</button>
        {{/if}}
        {{else}}
        <!-- <button class="found">I found this bike</button> -->
    {{/if}}
  </div>
</div>


</div>

{{/each}}
