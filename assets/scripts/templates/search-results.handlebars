{{#each this}}

<div class="bicycles row" data-id="{{this.id}}">
  <div class="show-left col-xs-4">
    <img class="bike-img" src={{this.url}}>
  </div>
  <div class="show-right col-xs-5">
    <ul>
      <li><span class="attribute">Make:</span> {{this.make}}</li>
      <li><span class="attribute">Model:</span> {{this.model}}</li>
      <li><span class="attribute">color:</span> {{this.color}}</li>
      <li><span class="attribute">serial number:</span> {{this.serial_number}}</li>
      <li><span class="attribute">size:</span> {{this.size}}</li>
    </ul>
  </div>

    <div class="col-xs-3 status">
      {{#if this.editable}}
        <button class="btn btn-secondary bike-nav show-update-form">Update</button>
        <button class="btn btn-secondary bike-nav remove">Remove</button>
          {{#if this.stolen}}
            <button class="btn btn-secondary bike-nav recover">Bike was recovered</button>
          {{else}}
            <button class="btn btn-secondary bike-nav register-stolen">Bike was stolen</button>
          {{/if}}
          {{else}}
          <!-- <button class="found">I found this bike</button> -->
      {{/if}}
    </div>


  </div>

  {{/each}}
